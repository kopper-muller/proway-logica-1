var

menu: inteiro

numero1, numero2, operacao: real

procedimento soma()
inicio
operacao:=numero1+numero2
escreval ("a soma é: ", operacao)
fimprocedimento


procedimento subtracao()
inicio
operacao:=numero1-numero2
escreval ("a subtrção é: ", operacao)
fimprocedimento


procedimento multiplicacao()
inicio
operacao:=numero1*numero2
escreval ("a multiplicação é: ", operacao)
fimprocedimento

procedimento divisao()
inicio
operacao:= numero1/numero2
operacao := numero1/numero2
escreval ("a divisão é: ", operacao)
fimprocedimento


procedimento operacoes()
inicio
se menu=1 entao
   soma()
senao
   se menu=2 entao
      subtracao()
   senao
      se menu=3 entao
         multiplicacao()
      senao
         se menu=4 entao
            divisao()
         fimse
      fimse
   fimse
fimse
fimprocedimento


inicio
enquanto menu<>5 faca

   escreva ("digite o primerio numero: ")
   leia(numero1)

   escreva ("digite o segundo numero: ")
   leia(numero2)

   limpatela

   escreval (" ___________________ ")
   escreval ("|       menu        |")
   escreval ("|___________________|")
   escreval ("|    1. somar       |")
   escreval ("|    2. subtrair    |")
   escreval ("|    3. multiplicar |")
   escreval ("|    4. dividir     |")
   escreval ("|    5. sair        |")
   escreval ("|___________________|")

   escreva "escolha o menu: ")
   leia(menu)

   operacoes()
   escreval(" ")
   timer(2000)
   limpatela
   timer(0)
fimenquanto
